<launch>
  <!-- gazeboo -->
  <include file="$(find haircut)/launch/command_gazebo.launch">
    <arg name="load_pos_ctrlrs" value="false"/>
  </include>

  <!-- Load the URDF, SRDF and other .yaml configuration files on the param server -->
  <include file="$(find haircut_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- controller -->
  <rosparam file="$(find haircut_moveit_config)/config/trajectory_controllers.yaml" command="load"/>
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/Assembly_copy" args="follow_joint_trajectory joint_state_controller"/>

  <!-- MoveIt -->
  <include file="$(find haircut_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="true"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Rviz and load the default config to see the state of the move_group node -->
  <include file="$(find haircut_moveit_config)/launch/moveit_rviz.launch">
    <arg name="config" value="true"/>
    <arg name="debug" value="false"/>
  </include>

</launch>